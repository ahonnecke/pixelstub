---
const clients = [
	"Panasonic",
	"Digital Assets Data",
	"Havenly",
	"Photobucket",
];
---

<section class="logo-strip">
	<div class="container">
		<p class="logo-strip-label">Trusted by engineering teams at</p>
		<div class="logo-list">
			{clients.map((client) => (
				<span class="client-logo">{client}</span>
			))}
		</div>
	</div>
</section>

<style>
	.logo-strip {
		padding: var(--space-xl) 0;
		border-bottom: 1px solid var(--color-border);
	}

	.logo-strip-label {
		text-align: center;
		color: var(--color-text-muted);
		font-size: 0.875rem;
		text-transform: uppercase;
		letter-spacing: 0.08em;
		margin-bottom: var(--space-lg);
	}

	.logo-list {
		display: flex;
		justify-content: center;
		align-items: center;
		flex-wrap: wrap;
		gap: var(--space-xl);
	}

	.client-logo {
		font-family: var(--font-heading);
		font-size: 1.125rem;
		font-weight: 700;
		color: var(--color-text-muted);
		opacity: 0.5;
		transition: opacity 0.2s;
		white-space: nowrap;
	}

	.client-logo:hover {
		opacity: 0.8;
	}
</style>
